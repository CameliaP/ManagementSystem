@using ManagementSystem.Common;
@using ManagementSystem.Web.ViewModels

@model IList<TaskViewModel>

@{
    ViewBag.Title = "Index";
    ViewBag.SearchQuery = Request.QueryString["query"];
    var rows = Math.Ceiling((double)Model.Count());
    var columns = GlobalConstants.ColumnsOnMainTaskPage;
}

@if (TempData["Success"] != null)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            @TempData["Success"].ToString()
        </div>
    </div>
}

@Html.Partial("_Search")
<br />
<div class="row">
    @if (User.IsInRole(GlobalConstants.ManagerRole))
    {
        <div class="col-md-3 mt100">
            <a href="\Tasks\Create" class="btn btn-lg pull-right btn-manager">
                <p class="text-center">Create new task</p>
                <h6 class="text-center">As a manager you can create new tasks</h6>
            </a>
            <p class="pull-right text-center mt20 manager-notes">
                See details of any task to edit or delete it.
            </p>
        </div>
        <br />
        <br />
    }
    <div class="col-md-8">
        @if (Model.Count == 0)
        {
            <h3>There are no tasks match your criteria</h3>
        }

        else
        {
            if (ViewBag.SearchQuery != null)
            {
                <p>Search results for "@ViewBag.SearchQuery"</p>
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading text-center">
                        <div class="row">
                            <div class="col-md-6">
                                Description
                            </div>
                            <div class="col-md-2">
                                Type
                            </div>
                            <div class="col-md-2">
                                Required By Date
                            </div>
                            <div class="col-md-2">
                                Next Action Date
                            </div>
                        </div>
                    </div>
                    <ul class="list-group text-center">
                        @foreach (var task in Model)
                        {
                            @Html.Partial("_ListedTaskView", task)
                        }
                    </ul>
                </div>
            }
            else
            {
                <h2 class="text-center">
                    @if (User.IsInRole(GlobalConstants.ManagerRole))
                    {
                        <span> Manager Dashboard (all tasks)</span>
                    }
                    else
                    {
                        <span> Dashboard </span>
                    }
                </h2>

                for (int row = 0; row < rows; row++)
                {
                    <div class="row">
                        @for (int col = 0; col < columns; col++)
                        {
                            var currentIndex = columns * row + col;
                            if (currentIndex < Model.Count)
                            {
                                <div class="col-md-@(12/columns)">
                                    @Html.Partial("_SimpleTaskView", Model[currentIndex])
                                </div>
                            }
                        }
                    </div>
                    <br />
                }
            }
        }
    </div>

    
</div>
